#include <bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n,x;
        cin>>n>>x;
        int z = abs(n-x);
        if(x>n)
        {
            cout<<"0"<<endl;
        }
        else if(z%4==0)
        {
            cout<<z/4<<endl;
        }
        else
        {
            cout<<z/4 + 1<<endl;
        }
        
    }
    return 0;
}
